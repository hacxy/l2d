{
  "name": "l2d",
  "type": "module",
  "version": "0.1.2-alpha.0",
  "description": "",
  "author": {
    "name": "Hacxy",
    "email": "hacxy.js@outlook.com"
  },
  "license": "MIT",
  "keywords": [
    "Live2D",
    "cubism2",
    "cubism5",
    "Live2D Component"
  ],
  "main": "index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "docs:dev": "npm run typedoc && vitepress dev docs",
    "docs:build": "npm run typedoc && npm run build && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test:demo": "vite __tests__",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "eslint --fix",
    "prepare": "simple-git-hooks",
    "commit": "git-cz",
    "release": "node scripts/release.js",
    "typedoc": "typedoc"
  },
  "devDependencies": {
    "@hacxy/eslint-config": "^0.0.7",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.0",
    "emittery": "^1.1.0",
    "eslint": "^9.19.0",
    "execa": "^9.5.2",
    "lint-staged": "^15.4.3",
    "live2d-motionsync": "^0.0.4",
    "picocolors": "^1.1.1",
    "pixi-live2d-display": "0.4.0",
    "pixi.js": "6.5.10",
    "prompts": "^2.4.2",
    "semver": "^7.7.1",
    "simple-git-hooks": "^2.11.1",
    "typedoc": "^0.27.7",
    "typedoc-plugin-markdown": "^4.4.2",
    "vite": "^6.0.11",
    "vite-plugin-dts": "^4.5.0",
    "vitepress": "^1.6.3",
    "vitepress-theme-mild": "0.8.3",
    "vue": "^3.5.13"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node scripts/git-hooks/commit-msg.mjs"
  },
  "lint-staged": {
    "*": [
      "pnpm run lint:staged"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": false
    }
  }
}
